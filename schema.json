{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Prompt Library Schema",
  "description": "Schema for validating prompt library JSON files",
  "type": "object",
  "required": ["version", "updated", "prompts"],
  "properties": {
    "version": {
      "type": "string",
      "pattern": "^\\d+\\.\\d+\\.\\d+$",
      "description": "Semantic version of the prompt library format"
    },
    "updated": {
      "type": "string",
      "format": "date-time",
      "description": "ISO 8601 timestamp of last update"
    },
    "prompts": {
      "type": "array",
      "description": "Array of prompt definitions",
      "items": {
        "type": "object",
        "required": ["id", "title", "description", "prompt"],
        "properties": {
          "id": {
            "type": "string",
            "pattern": "^[a-z0-9-]+$",
            "description": "Unique identifier using lowercase letters, numbers, and hyphens"
          },
          "title": {
            "type": "string",
            "minLength": 1,
            "description": "Human-readable title"
          },
          "description": {
            "type": "string",
            "minLength": 1,
            "description": "Brief description of what the prompt does"
          },
          "prompt": {
            "type": "string",
            "minLength": 1,
            "description": "The actual prompt text with {variable} placeholders"
          },
          "tags": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "Array of tags for categorization and search"
          },
          "category": {
            "type": "string",
            "description": "Primary category for grouping"
          },
          "variables": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of variable names used in the prompt"
          },
          "example_usage": {
            "type": "string",
            "description": "Example of how to use this prompt"
          }
        }
      }
    }
  }
}